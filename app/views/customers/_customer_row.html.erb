<tr id="<%= dom_id(customer) %>">
  <td><%= customer.name %></td>
  <td><%= customer.email %></td>
  <td><%= customer.billing_day %></td>
  <td>
    <% if customer.payment_method_type %>
      <%= Payments::PaymentService.find_method(customer.payment_method_type)&.class&.display_name || customer.payment_method_type.humanize %>
    <% else %>
      <span class="text-muted">NÃ£o definido</span>
    <% end %>
  </td>
  <td>
    <%= link_to t('actions.show'), customer, class: 'btn btn-sm btn-outline-primary' %>
    <%= link_to t('actions.edit'), edit_customer_path(customer), class: 'btn btn-sm btn-outline-secondary' %>
    <%= link_to t('actions.delete'), customer, data: {
                  turbo_method: :delete,
                  turbo_confirm: t('messages.confirm_delete')
                },
                class: 'btn btn-sm btn-outline-danger' %>
  </td>
</tr>