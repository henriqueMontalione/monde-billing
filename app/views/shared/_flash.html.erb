<%
  alert_class = case type
                when 'notice', 'success'
                  'success'
                when 'alert', 'error'
                  'danger'
                when 'warning'
                  'warning'
                else
                  'info'
                end
%>
<div class="alert alert-<%= alert_class %> alert-dismissible fade show"
     role="alert"
     data-controller="flash">
  <%= message %>
  <button type="button" class="btn-close" data-bs-dismiss="alert" data-action="click->flash#dismiss"></button>
</div>